<h3>{{viewTitle}}</h3>

<form action="/paciente" method="POST" autocomplete="off">
<div class="row">
    <input type="hidden" name="_id" value="{{paciente._id}}">

        <div class="form-group col-sm-6">
            <label>Nome:</label>
            <input type="text" class="form-control" name="nome" placeholder="Ex.: Maria Fatima" value="{{paciente.nome}}">
            <div class="text-danger">
                {{paciente.nomeError}}
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label>Sobrenome:</label>
            <input type="text" class="form-control" name="sobrenome" placeholder="Ex.: Carvalho" value="{{paciente.sobrenome}}">
            <div class="text-danger">
                {{paciente.sobrenomeError}}
            </div>
        </div>

         <div class="form-group col-sm-2">
            <label>Sexo:</label>
            <input type="text" class="form-control" name="sexo" placeholder="Ex.: Feminino" value="{{paciente.sexo}}">
            <div class="text-danger">
                {{paciente.sexoError}}
            </div>
        </div>

        <div class="form-group col-sm-4">
            <label>Data de Nascimento:</label>
            <input type="date" class="form-control" name="dataNascimento" placeholder="Ex.: 09/03/1889" value="{{paciente.dataNascimento}}">
            <div class="text-danger">
                {{paciente.dataNascimentoError}}
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label>Nº do Cartão SUS:</label>
            <input type="number" class="form-control" name="cartaoSus" placeholder="Ex.: 000 0000 0000 0000" value="{{paciente.cartaoSus}}">
            <div class="text-danger">
                {{paciente.cartaoSusError}}
            </div>
        </div>

        <div class="form-group col-sm-4">
            <label>Endereço:</label>
            <input type="text" class="form-control" name="endereco" placeholder="Ex.: Rua José" value="{{paciente.endereco}}">
            <div class="text-danger">
                {{paciente.enderecoError}}
            </div>
        </div>

        <div class="form-group col-sm-2">
            <label>N°:</label>
            <input type="text" class="form-control" name="numero" placeholder="Ex.: 42" value="{{paciente.numero}}">
            <div class="text-danger">
                {{paciente.numeroError}}
            </div>
        </div>

        <div class="form-group col-sm-3">
            <label>Complemento:</label>
            <input type="text" class="form-control" name="complemento" placeholder="Ex.: Casa" value="{{paciente.complemento}}">
            <div class="text-danger">
                {{paciente.complementoError}}
            </div>
        </div>

        <div class="form-group col-sm-3">
            <label>Bairro:</label>
            <input type="text" class="form-control" name="bairro" placeholder="Ex.: São Jóse" value="{{paciente.bairro}}">
            <div class="text-danger">
                {{paciente.bairroError}}
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label>Cidade:</label>
            <input type="text" class="form-control" name="cidade" placeholder="Ex.: Natal" value="{{paciente.cidade}}">
            <div class="text-danger">
                {{paciente.cidadeError}}
            </div>
        </div>

        <div class="form-group col-sm-2">
            <label>Estado:</label>
            <input type="text" class="form-control" name="estado" placeholder="Ex.: RN" value="{{paciente.eestado}}">
            <div class="text-danger">
                {{paciente.estadoError}}
            </div>
        </div>

        <div class="form-group col-sm-4">
            <label>CEP:</label>
            <input type="text" class="form-control" name="cep" placeholder="Ex.: 00000-000" value="{{paciente.cep}}">
            <div class="text-danger">
                {{paciente.cepError}}
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label>E-mail:</label>
            <input type="text" class="form-control" name="email" placeholder="Ex.: maria.carvalho@gmail.com" value="{{paciente.email}}">
            <div class="text-danger">
                {{paciente.emailError}}
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label>Telefone:</label>
            <input type="text" class="form-control" name="telefone" placeholder="Ex.: (00) 00000-0000" value="{{paciente.telefone}}">
            <div class="text-danger">
                {{paciente.telefoneError}}
            </div>
        </div>

        <div class="form-group col-sm-12">
            <button type="submit" class="btn btn-success">Cadastrar</button>
            <a class="btn btn-info" href="/paciente/list">Listar Todos</a>
        </div>
</div>
</form>