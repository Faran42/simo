<script>   
    

    function dataAtual(data){
        var dt = new Date();

        var ndt = new Date();

        var meses = new Array('Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro');
        var semana = new Array('Domingo', 'Segunda-Feira', 'Terça-Feira', 'Quarta-Feira', 'Quinta-Feira', 'Sexta-Feira', 'Sábado');

        ndt.setDate(dt.getDate()+data);

        var horas = ndt.getHours();
        var minutos = ndt.getMinutes();
        var segundos = ndt.getSeconds();

        var diaSemana = ndt.getDay();
        var dia = ndt.getDate();
        var mes = ndt.getMonth();
        var ano = ndt.getFullYear();

        document.write('Data atual:',horas,':',minutos,':',segundos,', ',semana[diaSemana],', ',dia,' de ',meses[mes],' de ',ano,'<br/>');
    }

    dataAtual(0);
    dataAtual(5);
    dataAtual(10);
    dataAtual(15);
    dataAtual(20);
    
</script>