<span id="response" hidden >{{response}}</span>
<h3>{{viewTitle}}</h3>

<form action="/exame" method="POST" autocomplete="off">
    <div class="row">
        <input type="hidden" name="_id" value="{{exame._id}}"/>

            <div class="form-group col-sm-8">
                <label>Nome:</label>
                <input type="text" class="form-control" name="nome" placeholder="Nome do exame" value="{{exame.nome}}" required>
                <div class="text-danger">
                    {{exame.nomeError}}
                </div>
            </div>

            <div class="form-group col-sm-4">
                <label>Validade:</label>
                <input type="number" class="form-control" name="validade" placeholder="Quantidade de dias" value="{{exame.validade}}" required>      
            </div>

            <div class="form-group col-sm-12">
                <label>Descrição:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="descricao" placeholder="Detalhe o exame" value="{{exame.descricao}}"></textarea>
                <div class="text-danger">
                    {{exame.descricaoError}}
                </div>
            </div>

            <div class="form-group  col-sm-12">
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a class="btn btn-info" href="/exame/list"></i>Ver Todos</a>
            </div>
    </div>
</form>

<script>

    var a = document.getElementById('response').innerHTML;

    if(a){
        alert(a);
    }

</script>